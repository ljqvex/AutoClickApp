<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 淡黑色背景 -->
    <solid android:color="#E6000000" />
    
    <!-- 淡黑色边框 -->
    <stroke
        android:width="2dp"
        android:color="#80000000" />
    
    <!-- 圆角 -->
    <corners android:radius="12dp" />
    
    <!-- 内边距 -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
        
</shape>
