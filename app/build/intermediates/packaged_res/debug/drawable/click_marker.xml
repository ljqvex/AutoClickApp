<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 外圈 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40FF4444" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>

    <!-- 内圈 -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#80FF4444" />
        </shape>
    </item>

    <!-- 中心点 -->
    <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="#CCFF4444" />
        </shape>
    </item>

</layer-list>
